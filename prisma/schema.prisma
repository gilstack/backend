generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  GUEST
  USER
  ADMIN
}

model User {
  id         String     @id @default(cuid())
  name       String
  email      String     @unique
  image      String?
  wallet     Int        @default(0)
  role       Roles      @default(GUEST)
  verified   Boolean    @default(false)
  verifiedAt DateTime?
  sessions   Session[]
  Passport   Passport[]
}

model Passport {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("passport")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  provider     String   @default("local")
  ip           String   @default("0.0.0.0")
  userAgent    String   @default("unknown")
  browser      String   @default("unknown")
  deviceOs     String   @default("unknown") @map("device_os")
  deviceType   String   @default("unknown") @map("device_type")
  refreshToken String?  @unique @map("refresh_token") @db.Text
  lastActivity DateTime @default(now())
  revokedAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
